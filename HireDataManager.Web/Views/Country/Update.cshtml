@model CountryViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient bg-primary ml-0 py-3" style="background-color:#161414">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Country</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.Country.CountryId" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Country.CountryId" class="form-control border-0 shadow" disabled />
                    <label asp-for="@Model.Country.CountryId" class="ms-2"></label>
                    <span asp-validation-for="@Model.Country.CountryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Country.CountryName" class="form-control border-0 shadow" />
                    <label asp-for="@Model.Country.CountryName" class="ms-2"></label>
                    <span asp-validation-for="@Model.Country.CountryName" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Country.RegionId" asp-asp-items="@ViewBag.Regions" class="form-select border-0 shadow">
                        <option disabled selected>--Select Region</option>
                        @foreach (var region in Model.RegionList)
                        {
                            <option value="@region.Value">@region.Text</option>
                        }
                    </select>
                    <label asp-for="@Model.Country.RegionId" class="ms-2"></label>
                    <span asp-validation-for="@Model.Country.RegionId"></span>
                </div>

                <input type="hidden" name="pageIndex" value="@ViewBag.PageIndex" />

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Country" asp-action="Index" asp-route-pg="@ViewBag.PageIndex" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

