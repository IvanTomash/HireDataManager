@model JobDto


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-gradient bg-primary ml-0 py-3" style="background-color:#161414">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Job</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="@Model.JobId" hidden />
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.JobTitle" class="form-control border-0 shadow" />
                    <label asp-for="@Model.JobTitle" class="ms-2"></label>
                    <span asp-validation-for="@Model.JobTitle" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="@Model.MinSalary" class="form-control border-0 shadow" />
                    <label asp-for="@Model.MaxSalary" class="ms-2"></label>
                    <span asp-validation-for="@Model.MinSalary" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="@Model.MaxSalary" class="form-control border-0 shadow" />
                    <label asp-for="@Model.MaxSalary" class="ms-2"></label>
                    <span asp-validation-for="@Model.MaxSalary" class="text-danger"></span>
                </div>

                <input type="hidden" name="pageIndex" value="@ViewBag.PageIndex" />

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Job" asp-action="Index" asp-route-pg="@ViewBag.PageIndex" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

